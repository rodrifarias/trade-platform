{
    "name": "rodrifarias/trade-platform",
    "description": "Plataforma de Trading - Curso de Clean Code & Clean Architecture",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "./src/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "./test/"
        }
    },
    "authors": [
        {
            "name": "Rodrigo Farias",
            "email": "rodrigo.campos.farias@outlook.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "tigo/documentbr": "^0.0.3",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1"
    },
    "scripts": {
        "test": "phpunit",
        "test:with-coverage": "php -dxdebug.mode=coverage vendor/bin/phpunit --coverage-html=coverage"
    }
}
